{% extends 'base.twig' %}
{% block title %}Yukinator{% endblock %}
{% block body %}
    <div class="col-8">
        <div class="row d-flex justify-content-center">
            <div class="col-2 fs-1 text-end">&#128513;</div>
            <div class="col-9">
                <div class="speech-bubble d-flex align-items-center">
                    <p>Je pense que c'est une {{ app.session.get('game').flats[0] | lower }} !</p>
                </div>
                <div class="mt-4">
                    <div class="col-6">
                        <div class=" d-flex flex-row">
                            <div class="col-6">
                                <a href="{{ url('game.success') }}" class="btn btn-primary">Waouh, bien joué!</a>
                            </div>
                            <div class="col-6">
                                <a href="{{ url('game.add') }}" class="btn btn-danger ">Non pas du tout!</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 mt-4">
                        <p class="text-secondary">Je
                            connais {{ app.session.get('game').flats|length }} {{ (app.session.get('game').flats|length > 1) ? 'plats' : 'plat' }}
                            , je crois que j'ai trouvé !</p>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
